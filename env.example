# Twilio Configuration for SMS/IVR alerts
TWILIO_SID=your_twilio_account_sid_here
TWILIO_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# SMTP Configuration for email alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Tide API Configuration (if using external service)
TIDE_API_KEY=your_tide_api_key_here
TIDE_API_URL=https://api.tide-service.com

# Model Paths (usually don't need to change)
MODELS_DIR=models
ARTIFACTS_DIR=artifacts
